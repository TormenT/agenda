<h1>Agenda</h1>

<table>
  <tr>
    <th>Nome completo</th>
    <th>Telefone</th>
    <th>Celular</th>
    <th>Grupo</th>
    <th>Aniversario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contatos.each do |contato| %>
  <tr>
    <td><%= contato.nome_completo %></td>
    <td><%= contato.telefone %></td>
    <td><%= contato.celular %></td>
    <td><%= contato.grupo %></td>
    <td><%= contato.aniversario %></td>
    <td><%= link_to 'Mostrar', contato %></td>
    <td><%= link_to 'Editar', edit_contato_path(contato) %></td>
    <td><%= link_to 'Excluir', contato, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

